<div class="col-md-8">
  <% @posts.each do |post| %>
    <h2><%= post.title  %></h2>
    <% if !post.tags.nil? %>
      <% post.tags.split(",").each do |tag|%>
        <span class="label label-primary"><%= tag %></span>
      <% end %>
    <% end %>
    <div class="well well-lg">
      <%= post.content %>
    </div>
    <%= link_to 'Edit',edit_post_path(post.id)%>
    <%= link_to 'X',post, method: :delete,
                                         data: { confirm: "You sure?" } %>
  <% end %>

</div>
  <div class="col-md-4">
    Archive:
    <% date_posts = @posts.order(created_at: :desc) %>
    <% date_posts.each do |post_date| %>

      <p><%= post_date.created_at.strftime("%B %d, %Y") %></p>

    <% end %>

  </div>
